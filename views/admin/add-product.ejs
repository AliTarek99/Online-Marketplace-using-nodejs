<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/add-product/<%= product._id != null ? product._id : '' %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value='<%= product._id != null ? product.title : '' %>'>
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imgUrl" id="imageUrl" value='<%= product._id != null ? product.imgUrl : '' %>'>
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value='<%= product._id != null ? product.price : '' %>'>
            </div>
            <div class="form-control">
                <label for="quantity">Quantity</label>
                <input type="number" name="quantity" id="quantity" value='<%= product._id != null ? product.quantity : '' %>'>
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><%= product._id != null ? product.description : '' %></textarea>
            </div>

            <button class="btn" type="submit"><%= product._id == null ? "Add Product" : 'Edit Product' %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>