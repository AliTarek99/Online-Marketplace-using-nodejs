<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <% if(err) { %>
            <div class="user-message user-message--error">* <%= err %></div>
        <% } %>
        <main>
            <% if (prods.length > 0) { let total = 0;%>
                <ul class="cart__item-list">
                    <% prods.forEach(p => { %>
                        <li class="cart__item">
                            <h1><%= p.productId.title %></h1>
                            <h2>Quantity: <%= p.quantity %></h2>
                            <h2>Price: <% total += p.productId.price * p.quantity %> <%= p.productId.price * p.quantity %></h2>
                            <form action="/remove-from-cart/<%= p.productId._id %>" method="POST">
                                <button class="btn danger" type="submit">Delete</button>
                            </form>
                        </li>
                    <% }) %>
                </ul>
                <hr>
                <div class="centered">
                    <h3>Total Price: $<%= total %></h3><br>
                    <a href="/checkout" class="btn">Order Now!</a>
                </div>
                
            <% } else { %>
                <h1>No Products in Cart!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>