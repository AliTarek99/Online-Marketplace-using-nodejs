<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <% if(err) { %>
            <div class="user-message user-message--error">* <%= err %></div>
        <% } %>
        <main>
            <ul class="cart__item-list">
                <% let totalSum = 0; %>
                <% products.forEach(p => { %>
                    <% totalSum += p.product.price * p.quantity; %>
                    <li class="cart__item">
                        <h1><%= p.product.title %></h1>
                        <h2>Quantity: <%= p.quantity %></h2>
                    </li>
                <% }) %>
            </ul>
            <div class="centered">
                <h2>Total: $<%= totalSum %></h2>
            </div>
            <div class="centered">
                <button id="order-btn" class="btn">ORDER</button>
                <script src="https://js.stripe.com/v3/"></script>
                <script>
                    var stripe = Stripe('pk_test_51OjEp7ElLr217bS3Uq7nkqkRWQrzBEgVcTu573IlP3iFceUJttbpcMp2AMLv1VMrOKvDyWVj7zkUvCzfYI7546m800Ora4t6m9');
                    var orderBtn = document.getElementById('order-btn');
                    orderBtn.addEventListener('click', function() {
                        stripe.redirectToCheckout({
                            sessionId: '<%= sessionId %>'
                        });
                    });
                </script>
            </div>
        </main>
        <%- include('../includes/end.ejs') %>